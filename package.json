{
  "name": "snoopy-moods",
  "version": "1.0.0",
  "description": "Snoopy Moods - An Electron app",
  "author": "Christiana Pak Nguyen",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.christiana.snoopymoods",
    "productName": "Snoopy Moods",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/.bin",
      "!*.map"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "publish": null
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^24.13.3"
  }
}
